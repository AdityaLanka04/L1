# AWS Production Environment
# This file is used by docker-compose.production.yml on EC2
# IMPORTANT: Add your actual secrets on the EC2 server, not in git

# Database (Supabase PostgreSQL)
# Set this on EC2 server with your actual Supabase connection string
DATABASE_URL=postgresql://user:password@host:5432/postgres

# Security
# Generate a secure key on EC2 server
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256

# AI APIs
# Add your actual API keys on EC2 server
GOOGLE_GENERATIVE_AI_KEY=your-google-api-key
GROQ_API_KEY=your-groq-api-key

# AI Performance Optimization
GEMINI_MODEL=gemini-2.0-flash
GEMINI_THINKING_MODEL=gemini-2.0-flash-thinking-exp
GROQ_MODEL=llama-3.3-70b-versatile
MAX_CONTEXT_TOKENS=4000
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=3600
GEMINI_RATE_LIMIT_PER_MINUTE=60

# Temperature Settings per Task
CHAT_TEMPERATURE=0.7
FLASHCARD_GENERATION_TEMPERATURE=0.5
QUIZ_GENERATION_TEMPERATURE=0.4
EXPLANATION_TEMPERATURE=0.6
REASONING_TEMPERATURE=0.3

# Memory Management Optimization
MEMORY_RECALL_LIMIT=5
MEMORY_IMPORTANCE_THRESHOLD=0.4
ENABLE_MEMORY_CONSOLIDATION=true
MEMORY_CACHE_ENABLED=true

# RAG Settings
RAG_TOP_K=5
RAG_RERANK_ENABLED=true
RAG_CACHE_TTL=3600
RAG_SEMANTIC_WEIGHT=0.7
RAG_KEYWORD_WEIGHT=0.3

# Agent Settings
AGENT_MAX_RETRIES=2
AGENT_TIMEOUT_SECONDS=30
ENABLE_AGENT_CACHING=true
AGENT_DECISION_CACHE_SIZE=100

# Google OAuth
GOOGLE_CLIENT_ID=44446084594-8jc1vsg08qkt4d35npd2gn33b65b2638.apps.googleusercontent.com

# Storage
STORAGE_TYPE=local
STORE_ORIGINAL_FILES=false
UPLOAD_DIR=uploads

# CORS - Allow frontend domain
ALLOWED_ORIGINS=https://cerbyl.com,http://localhost:3000

# Neo4j (if needed)
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=Zeppelin@123
NEO4J_DATABASE=neo4j

# LangSmith (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=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
LANGCHAIN_PROJECT=brainwave-agents
