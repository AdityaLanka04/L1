  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.google-signin-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    color-mix(in srgb, var(--accent) 5%, transparent) 50%, 
    transparent 100%);
  transition: left 0.5s ease;
}

.google-signin-button:hover::before {
  left: 100%;
}

.google-signin-button:hover {
  border-color: color-mix(in srgb, var(--accent) 40%, transparent);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px color-mix(in srgb, var(--accent) 8%, transparent);
}

.google-signin-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.google-icon {
  width: 20px;
  height: 20px;
}

.divider {
  display: flex;
  align-items: center;
  gap: 16px;
  margin: 32px 0;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: color-mix(in srgb, var(--accent) 15%, transparent);
}

.divider span {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 2px;
  color: var(--accent);
  text-transform: uppercase;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.input-group {
  position: relative;
}

.input-label {
  position: absolute;
  top: 16px;
  left: 16px;
  font-size: 14px;
  color: color-mix(in srgb, var(--text-primary) 50%, transparent);
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  letter-spacing: 0.3px;
}

.login-input {
  width: 100%;
  padding: 16px;
  background-color: var(--bg-secondary);
  border: 1px solid color-mix(in srgb, var(--accent) 15%, transparent);
  color: var(--text-primary);
  font-size: 14px;
  font-family: 'Inter', sans-serif;
  letter-spacing: 0.3px;
  outline: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.login-input:focus {
  border-color: var(--accent);
  background-color: color-mix(in srgb, var(--bg-secondary) 70%, var(--accent) 3%);
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--accent) 8%, transparent);
}

.login-input:focus + .input-label,
.login-input:not(:placeholder-shown) + .input-label {
  top: -10px;
  left: 12px;
  font-size: 11px;
  padding: 0 4px;
  background-color: var(--bg-primary);
  color: var(--accent);
  font-weight: 600;
  letter-spacing: 1px;
}

.login-input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.login-button {
  width: 100%;
  padding: 16px 24px;
  background-color: var(--accent);
  border: 1px solid var(--accent);
  color: var(--bg-primary);
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 2px;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  margin-top: 12px;
  position: relative;
  overflow: hidden;
}

.login-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background-color: color-mix(in srgb, var(--bg-primary) 20%, transparent);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.login-button:hover::before {
  width: 300px;
  height: 300px;
}

.login-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px color-mix(in srgb, var(--accent) 30%, transparent);
}

.login-button:active {
  transform: translateY(0);
}

.login-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

.button-text {
  position: relative;
  z-index: 1;
}

.login-footer {
  margin-top: 32px;
  text-align: center;
}

.login-switch {
  font-size: 14px;
  color: color-mix(in srgb, var(--text-primary) 70%, transparent);
  letter-spacing: 0.3px;
}

.login-switch-link {
  color: var(--accent);
  font-weight: 600;
  cursor: pointer;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: all 0.3s ease;
  margin-left: 4px;
}

.login-switch-link:hover {
  border-bottom-color: var(--accent);
}

.google-spinner {
  width: 18px;
  height: 18px;
  border: 2px solid color-mix(in srgb, var(--accent) 20%, transparent);
  border-top: 2px solid var(--accent);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@media (max-width: 1200px) {
  .login-page {
    grid-template-columns: 1fr;
  }
  
  .login-left {
    display: none;
  }
  
  .login-right {
    border-left: none;
  }
}

@media (max-width: 768px) {
  .login-right {
    padding: 40px 24px;
  }
  
  .login-container {
    max-width: 100%;
  }
  
  .login-subtitle {
    font-size: 24px;
  }
}

@media (max-width: 480px) {
  .login-input,
  .login-button,
  .google-signin-button {
    padding: 14px 16px;
    font-size: 13px;
  }
  
  .login-title {
    font-size: 11px;
  }
  
  .login-subtitle {
    font-size: 20px;
  }
}