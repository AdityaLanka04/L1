@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', sans-serif;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  overflow: hidden;
}

.login-page {
  width: 100vw;
  height: 100vh;
  background-color: var(--bg-primary);
  display: grid;
  grid-template-columns: 1fr 1fr;
  position: relative;
  overflow: hidden;
}

.login-left {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80px 60px;
  background: linear-gradient(135deg, 
    color-mix(in srgb, var(--bg-primary) 95%, var(--accent) 5%) 0%,
    var(--bg-primary) 100%);
  border-right: 1px solid color-mix(in srgb, var(--accent) 10%, transparent);
  overflow: visible;
}

.brand-graphic {
  position: relative;
  width: 750px;
  height: 750px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
}

.brand-circle {
  position: absolute;
  width: 620px;
  height: 620px;
  border: 60px solid var(--accent);
  border-radius: 50%;
  z-index: 2;
  box-shadow: 
    0 0 40px color-mix(in srgb, var(--accent) 15%, transparent),
    inset 0 0 60px color-mix(in srgb, var(--accent) 8%, transparent);
}

.concentric-ring-1 {
  position: absolute;
  width: 740px;
  height: 740px;
  border: 1px solid color-mix(in srgb, var(--accent) 40%, transparent);
  border-radius: 50%;
  z-index: 1;
  animation: pulseRing 4s ease-in-out infinite;
}

.concentric-ring-2 {
  position: absolute;
  width: 500px;
  height: 500px;
  border: 1px solid color-mix(in srgb, var(--accent) 25%, transparent);
  border-radius: 50%;
  z-index: 3;
  animation: pulseRing 4s ease-in-out infinite 0.5s;
}

.concentric-ring-3 {
  position: absolute;
  width: 860px;
  height: 860px;
  border: 1px solid color-mix(in srgb, var(--accent) 10%, transparent);
  border-radius: 50%;
  z-index: 0;
  animation: pulseRing 4s ease-in-out infinite 1s;
}

@keyframes pulseRing {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.02);
  }
}

.brand-bar-top {
  position: absolute;
  width: 80px;
  height: 370px;
  background: linear-gradient(180deg, 
    var(--accent) 0%,
    color-mix(in srgb, var(--accent) 95%, white) 100%);
  top: -280px;
  left: calc(50% - 120px);
  transform: rotate(-45deg);
  z-index: 3;
  box-shadow: 
    0 4px 20px color-mix(in srgb, var(--accent) 25%, transparent),
    0 0 40px color-mix(in srgb, var(--accent) 15%, transparent);
}

.brand-bar-bottom {
  position: absolute;
  width: 80px;
  height: 370px;
  background: linear-gradient(180deg, 
    color-mix(in srgb, var(--accent) 95%, white) 0%,
    var(--accent) 100%);
  bottom: -280px;
  left: calc(50% + 120px);
  transform: rotate(-45deg);
  z-index: 1;
  box-shadow: 
    0 -4px 20px color-mix(in srgb, var(--accent) 25%, transparent),
    0 0 40px color-mix(in srgb, var(--accent) 15%, transparent);
}

.glow-orb-1 {
  position: absolute;
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, 
    color-mix(in srgb, var(--accent) 25%, transparent) 0%,
    transparent 70%);
  border-radius: 50%;
  top: 20%;
  left: 20%;
  z-index: 0;
  animation: floatOrb 8s ease-in-out infinite;
  filter: blur(40px);
}

.glow-orb-2 {
  position: absolute;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, 
    color-mix(in srgb, var(--accent) 20%, transparent) 0%,
    transparent 70%);
  border-radius: 50%;
  bottom: 15%;
  right: 18%;
  z-index: 0;
  animation: floatOrb 10s ease-in-out infinite 2s;
  filter: blur(50px);
}

@keyframes floatOrb {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translate(20px, -20px) scale(1.1);
    opacity: 0.5;
  }
}

.brand-text-overlay {
  position: absolute;
  z-index: 4;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -58%) rotate(-8deg);
  filter: drop-shadow(0 4px 20px color-mix(in srgb, var(--accent) 30%, transparent));
}

.brand-name {
  font-family: 'Inter', sans-serif;
  font-size: 119px;
  font-weight: 700;
  line-height: 1;
  color: var(--accent);
  letter-spacing: -5px;
  text-transform: lowercase;
  margin-bottom: 16px;
  text-shadow: 
    0 0 30px color-mix(in srgb, var(--accent) 40%, transparent),
    0 0 60px color-mix(in srgb, var(--accent) 20%, transparent);
}

.brand-tagline {
  font-family: 'Inter', sans-serif;
  font-size: 15px;
  font-weight: 700;
  letter-spacing: 3px;
  text-transform: uppercase;
  color: color-mix(in srgb, var(--text-primary) 80%, transparent);
  margin-top: 8px;
}

.brand-description {
  position: absolute;
  bottom: 100px;
  left: 45px;
  max-width: 300px;
  text-align: left;
  opacity: 0;
  animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) 1s forwards;
  padding-left: 12px;
  border-left: 2px solid color-mix(in srgb, var(--accent) 40%, transparent);
}

.description-label {
  font-family: 'Inter', sans-serif;
  font-size: 7px;
  font-weight: 800;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: var(--accent);
  margin-bottom: 8px;
  opacity: 0.8;
}

.description-text {
  font-family: 'Inter', sans-serif;
  font-size: 10px;
  font-weight: 400;
  line-height: 1.6;
  color: var(--text-primary);
  opacity: 0.8;
  text-align: justify;
  hyphens: auto;
}

.geometric-dots {
  position: absolute;
  width: 50%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 0;
}

.dot-pattern {
  position: absolute;
}

.dot-pattern.circle-1 {
  top: 8%;
  left: 10%;
  width: 220px;
  height: 220px;
}

.dot-pattern.circle-2 {
  top: 18%;
  right: 8%;
  width: 180px;
  height: 180px;
}

.dot-pattern.circle-3 {
  bottom: 25%;
  left: 15%;
  width: 150px;
  height: 150px;
}

.dot-pattern.circle-4 {
  bottom: 10%;
  right: 20%;
  width: 190px;
  height: 190px;
}

.dot-pattern.circle-5 {
  top: 50%;
  left: 5%;
  width: 130px;
  height: 130px;
}

.dot-pattern.circle-6 {
  top: 35%;
  right: 25%;
  width: 100px;
  height: 100px;
}

.dot-pattern.line-1 {
  top: 12%;
  left: 35%;
  width: 280px;
  height: 2px;
  transform: rotate(-35deg);
}

.dot-pattern.line-2 {
  bottom: 18%;
  left: 45%;
  width: 220px;
  height: 2px;
  transform: rotate(25deg);
}

.dot-pattern.line-3 {
  top: 60%;
  right: 10%;
  width: 180px;
  height: 2px;
  transform: rotate(-50deg);
}

.dot-pattern.square-1 {
  top: 20%;
  left: 40%;
  width: 140px;
  height: 140px;
}

.dot-pattern.square-2 {
  bottom: 30%;
  right: 35%;
  width: 110px;
  height: 110px;
}

.dot-pattern.triangle-1 {
  top: 40%;
  left: 25%;
  width: 160px;
  height: 160px;
}

.dot-pattern.arc-1 {
  bottom: 15%;
  left: 35%;
  width: 200px;
  height: 100px;
}

.pattern-dot {
  position: absolute;
  width: 3px;
  height: 3px;
  background-color: var(--accent);
  border-radius: 50%;
  opacity: 0;
  animation: pulseDot 5s ease-in-out infinite;
  box-shadow: 0 0 8px var(--accent);
}

.pattern-dot.fast {
  animation-duration: 3s;
}

.pattern-dot.slow {
  animation-duration: 7s;
}

.pattern-dot.medium {
  animation-duration: 5s;
}

.pattern-dot:nth-child(1) { animation-delay: 0s; }
.pattern-dot:nth-child(2) { animation-delay: 0.3s; }
.pattern-dot:nth-child(3) { animation-delay: 0.6s; }
.pattern-dot:nth-child(4) { animation-delay: 0.9s; }
.pattern-dot:nth-child(5) { animation-delay: 1.2s; }
.pattern-dot:nth-child(6) { animation-delay: 1.5s; }
.pattern-dot:nth-child(7) { animation-delay: 1.8s; }
.pattern-dot:nth-child(8) { animation-delay: 2.1s; }
.pattern-dot:nth-child(9) { animation-delay: 2.4s; }
.pattern-dot:nth-child(10) { animation-delay: 2.7s; }
.pattern-dot:nth-child(11) { animation-delay: 3s; }
.pattern-dot:nth-child(12) { animation-delay: 3.3s; }
.pattern-dot:nth-child(13) { animation-delay: 3.6s; }
.pattern-dot:nth-child(14) { animation-delay: 3.9s; }
.pattern-dot:nth-child(15) { animation-delay: 4.2s; }

@keyframes pulseDot {
  0%, 100% {
    opacity: 0;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(2.5);
  }
}

.login-right {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px;
}

.login-container {
  width: 100%;
  max-width: 460px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.login-header {
  margin-bottom: 48px;
}

.login-title {
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 4px;
  text-transform: uppercase;
  color: var(--accent);
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.login-title::after {
  content: '';
  flex: 1;
  height: 1px;
  background: linear-gradient(to right, 
    var(--accent) 0%, 
    transparent 100%);
  opacity: 0.3;
}

.login-subtitle {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5px;
}

.google-signin-container {
  margin-bottom: 32px;
}

.google-signin-button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 16px 24px;
  background-color: var(--bg-secondary);
  border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 500;
  letter-spacing: 0.3px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.google-signin-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    color-mix(in srgb, var(--accent) 5%, transparent) 50%, 
    transparent 100%);
  transition: left 0.5s ease;
}

.google-signin-button:hover::before {
  left: 100%;
}

.google-signin-button:hover {
  border-color: color-mix(in srgb, var(--accent) 40%, transparent);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px color-mix(in srgb, var(--accent) 8%, transparent);
}

.google-signin-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.google-icon {
  width: 20px;
  height: 20px;
}

.divider {
  display: flex;
  align-items: center;
  gap: 16px;
  margin: 32px 0;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: color-mix(in srgb, var(--accent) 15%, transparent);
}

.divider span {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 2px;
  color: var(--accent);
  text-transform: uppercase;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.input-group {
  position: relative;
}

.input-label {
  position: absolute;
  top: 16px;
  left: 16px;
  font-size: 14px;
  color: color-mix(in srgb, var(--text-primary) 50%, transparent);
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  letter-spacing: 0.3px;
}

.login-input {
  width: 100%;
  padding: 16px;
  background-color: var(--bg-secondary);
  border: 1px solid color-mix(in srgb, var(--accent) 15%, transparent);
  color: var(--text-primary);
  font-size: 14px;
  font-family: 'Inter', sans-serif;
  letter-spacing: 0.3px;
  outline: none;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.login-input:focus {
  border-color: var(--accent);
  background-color: color-mix(in srgb, var(--bg-secondary) 70%, var(--accent) 3%);
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--accent) 8%, transparent);
}

.login-input:focus + .input-label,
.login-input:not(:placeholder-shown) + .input-label {
  top: -10px;
  left: 12px;
  font-size: 11px;
  padding: 0 4px;
  background-color: var(--bg-primary);
  color: var(--accent);
  font-weight: 600;
  letter-spacing: 1px;
}

.login-input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.login-button {
  width: 100%;
  padding: 16px 24px;
  background-color: var(--accent);
  border: 1px solid var(--accent);
  color: var(--bg-primary);
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 2px;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  margin-top: 12px;
  position: relative;
  overflow: hidden;
}

.login-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background-color: color-mix(in srgb, var(--bg-primary) 20%, transparent);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.login-button:hover::before {
  width: 300px;
  height: 300px;
}

.login-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px color-mix(in srgb, var(--accent) 30%, transparent);
}

.login-button:active {
  transform: translateY(0);
}

.login-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

.button-text {
  position: relative;
  z-index: 1;
}

.login-footer {
  margin-top: 32px;
  text-align: center;
}

.login-switch {
  font-size: 14px;
  color: color-mix(in srgb, var(--text-primary) 70%, transparent);
  letter-spacing: 0.3px;
}

.login-switch-link {
  color: var(--accent);
  font-weight: 600;
  cursor: pointer;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: all 0.3s ease;
  margin-left: 4px;
}

.login-switch-link:hover {
  border-bottom-color: var(--accent);
}

.google-spinner {
  width: 18px;
  height: 18px;
  border: 2px solid color-mix(in srgb, var(--accent) 20%, transparent);
  border-top: 2px solid var(--accent);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@media (max-width: 1200px) {
  .login-page {
    grid-template-columns: 1fr;
  }
  
  .login-left {
    display: none;
  }
  
  .login-right {
    border-left: none;
  }
}

@media (max-width: 768px) {
  .login-right {
    padding: 40px 24px;
  }
  
  .login-container {
    max-width: 100%;
  }
  
  .login-subtitle {
    font-size: 24px;
  }
}

@media (max-width: 480px) {
  .login-input,
  .login-button,
  .google-signin-button {
    padding: 14px 16px;
    font-size: 13px;
  }
  
  .login-title {
    font-size: 11px;
  }
  
  .login-subtitle {
    font-size: 20px;
  }
}

